<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#18191A"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:text="Feeder"
            android:fontFamily="@font/fugaz_one"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/custom_relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:text="Donate Food"
            android:fontFamily="@font/baloo_bhai"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:textColor="@color/white"
                android:background="@drawable/custum_edttxt"
                android:drawableEnd="@drawable/custom_email"
                android:drawableTint="#242526"
                android:hint="Enter Name"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp" />

            <EditText
                android:id="@+id/txtfoodtype"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/custum_edttxt"
                android:drawableEnd="@drawable/ic_baseline_fastfood_24"
                android:drawableTint="#242526"
                android:hint="Enter Food"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp" />

            <EditText
                android:id="@+id/txtaddress"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/custum_edttxt"
                android:drawableEnd="@drawable/ic_baseline_list_alt_24"
                android:drawableTint="#242526"
                android:hint="Location"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp" />

            <EditText
                android:id="@+id/txtcontact"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/custum_edttxt"
                android:drawableEnd="@drawable/ic_baseline_list_alt_24"
                android:drawableTint="#242526"
                android:hint="Contact"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp">


                <Button
                    android:id="@+id/btnUpl"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="Upload"
                    android:fontFamily="@font/font3"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>